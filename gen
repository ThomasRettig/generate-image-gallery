#!/bin/bash
find . -iname "*.jpg" -printf '<figure style="margin:0;"><img src="%f" style="max-width: 100%%; margin-top:8px;" loading="lazy"><figcaption style="position: relative;bottom: 21px;backdrop-filter: blur(25px) saturate(1.7) brightness(0.85);background-color:hsl(0deg 0%% 100%%/19%%);color:white;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;font-family:system-ui;text-align:center;text-shadow:0 0 20px #000;padding:5px;">%f</figcaption></figure>' > index.html